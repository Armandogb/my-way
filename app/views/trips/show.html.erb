  <div id= 'trip-info' class = 'ui inverted segment'>
    <p id = 'mode-choice'><%= suggestion(@routes) %></p>
    <% r = method_limiter(@routes)[0] %>
    <%= link_to(app_link(@trip,r)) do%>
    <div class = 'route-div visible fluid massive ui inverted green button' id = "choice-0"><div class='dollars-left route-info'><%= dollar_converter(r)%></div><div class='spacer'></div><div class='time-middle route-info'><%= duration(r) %> min</div><div class='spacer'></div><div class='mode-right route-info'><%= travel_mode(r) %></div></div>
    <% end %>
  </div>

  <div id="show-result">
    <div class="results ui inverted segment">
      <% method_limiter(@routes)[1..-1].each_with_index do |r,i| %>
      <%= link_to(app_link(@trip,r)) do%>
      <% if i <= 2%>
      <div class='route-div visible fluid ui small <%=color_selector(r)%> button' id = "choice-<%= i %> route-button">
        <% else %>
        <div class='hidden fluid ui small <%=color_selector(r)%> button' id = "choice-<%= i %> route-button">
          <% end %>
          <div class='dollars-left route-info'><%= dollar_converter(r)%></div><div class='spacer'></div><div class='time-middle route-info'><%= duration(r) %> min</div><div class='spacer'></div><div class='mode-right route-info'><%= travel_mode(r) %></div><!-- <i class= "<%=sym_placer(r)%>" ></i> -->
        </div>
        <% end %>
        <% end %>
        <% if method_limiter(@routes).length > 4 %>
        <div class = 'tiny fluid ui button' id = 'show-more'>More</div>
        <% end %>
      </div>
    </div >

